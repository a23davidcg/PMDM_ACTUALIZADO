<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imagen1"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_margin="2dp"
            android:src="@drawable/imagen1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/like"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/likeImageView"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:src="@drawable/like" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/comentariosLottie"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:src="@drawable/comentario" />


        </LinearLayout>

        <ImageView
            android:id="@+id/imagen2"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/imagen2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/like"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/likeImageView2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:src="@drawable/like" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/comentariosLottie2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:src="@drawable/comentario" />


        </LinearLayout>

        <ImageView
            android:id="@+id/imagen3"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_margin="2dp"
            android:src="@drawable/imagen3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/like"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/likeImageView3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:src="@drawable/like" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/comentariosLottie3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:src="@drawable/comentario" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imagen4"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/imagen4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/like"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/likeImageView4"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:src="@drawable/like" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/comentariosLottie4"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:src="@drawable/comentario" />
        </LinearLayout>


        <ImageView
            android:id="@+id/imagen5"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_margin="2dp"
            android:src="@drawable/imagen1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/like"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/likeImageView6"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:src="@drawable/like" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/comentariosLottie5"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:src="@drawable/comentario" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
